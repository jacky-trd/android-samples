<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#ffffff">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/driver_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_hint_ahead"
                android:typeface="sans"
                android:textSize="20sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/username_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mr. Wang"
                android:typeface="serif"
                android:textSize="18sp"
                android:textColor="#ff6f00"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/phone_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_phonenumber_text"
                android:typeface="sans"
                android:textSize="20sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/userphone_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18010000000"
                android:typeface="serif"
                android:textSize="18sp"
                android:textColor="#009688"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">
            <Button
                android:id="@+id/call_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="@string/call_button_text"/>

            <Button
                android:id="@+id/finish_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:textAllCaps="false"
                android:text="@string/finish_button_text"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
