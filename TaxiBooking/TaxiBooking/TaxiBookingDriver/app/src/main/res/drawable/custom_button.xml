<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">

        <shape
            android:shape="rectangle">
            <solid
                android:color="#afafaf"/>
            <corners
                android:radius="3dp"/>
            <stroke
                android:color="#22ffffff"
                android:width="8dp"/>
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">
            <solid
                android:color="#afafaf"/>
            <corners
                android:radius="3dp"/>
            <stroke
                android:color="#22ffffff"
                android:width="10dp"/>
        </shape>
    </item>

</selector>